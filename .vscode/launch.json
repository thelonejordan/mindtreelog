{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Django: runserver",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": [
        "runserver",
        "8000"
      ],
      "django": true,
      "justMyCode": false,
      "env": {
        "DEBUG": "true",
        "DEV_MODE": "true"
      },
      "console": "integratedTerminal"
    },
    {
      "name": "Django: runserver (no reload)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": [
        "runserver",
        "8000",
        "--noreload"
      ],
      "django": true,
      "justMyCode": false,
      "env": {
        "DEBUG": "true",
        "DEV_MODE": "true"
      },
      "console": "integratedTerminal"
    },
    {
      "name": "Django: shell",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": [
        "shell"
      ],
      "django": true,
      "justMyCode": false,
      "env": {
        "DEBUG": "true",
        "DEV_MODE": "true"
      },
      "console": "integratedTerminal"
    },
    {
      "name": "Django: migrate",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": [
        "migrate"
      ],
      "django": true,
      "justMyCode": false,
      "env": {
        "DEBUG": "true",
        "DEV_MODE": "true"
      },
      "console": "integratedTerminal"
    },
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": false
    }
  ]
}
